{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": false,
    "sourceMap": false,
    "outDir": "./dist"
  },
  "include": [
    "configs",
    "main.ts",
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/__tests__"
  ],
  "typeRoots": ["./@types", "./node_modules/@types"]
}
